<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_practical_test01_var01_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ro.pub.cs.systems.eim.practicaltest01var01.PracticalTest01Var01MainActivity">

    <Button
        android:text="North"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/North_Button" />

    <Button
        android:text="East"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/North_Button"
        android:layout_toLeftOf="@+id/North_Button"
        android:layout_toStartOf="@+id/North_Button"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        android:id="@+id/East_Button" />

    <Button
        android:text="West"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/East_Button"
        android:layout_toRightOf="@+id/North_Button"
        android:layout_toEndOf="@+id/North_Button"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:id="@+id/West_Button" />

    <Button
        android:text="South"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/West_Button"
        android:layout_toRightOf="@+id/East_Button"
        android:layout_toEndOf="@+id/East_Button"
        android:layout_marginTop="41dp"
        android:id="@+id/South_Button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/South_Button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/Counter_TextView"
        android:layout_alignRight="@+id/South_Button"
        android:layout_alignEnd="@+id/South_Button" />

    <Button
        android:text="Navigate to Secondary Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Counter_TextView"
        android:layout_marginTop="70dp"
        android:id="@+id/Navigate_Button"
        android:layout_alignLeft="@+id/East_Button"
        android:layout_alignStart="@+id/East_Button"
        android:layout_alignRight="@+id/West_Button"
        android:layout_alignEnd="@+id/West_Button" />
</RelativeLayout>
